## -*- python -*-
# Build code in this directory
##    _______     ___
## + 6 @ |||| # P ||| +

import os

def build(bld):
    uname = os.uname()
    if uname[0] == 'Darwin':
        bldFunc = bld.shlib
    else:
        bldFunc = bld.stlib
    
    bldFunc(source = r"""
    FiveMomentSrcImpl.cpp
    ./_vlasovData/VlasovStreamMax1x1v.c
    ./_vlasovData/VlasovStreamMax1x2v.c
    ./_vlasovData/VlasovStreamMax1x3v.c
    ./_vlasovData/VlasovStreamMax2x2v.c
    ./_vlasovData/VlasovStreamSer1x1v.c
    ./_vlasovData/VlasovStreamSer1x2v.c
    ./_vlasovData/VlasovStreamSer1x3v.c
    ./_vlasovData/VlasovStreamSer2x2v.c
    ./_linearHyperbolicData/LinearHyperMax1dVolTerms.cpp
    ./_linearHyperbolicData/LinearHyperMax2dVolTerms.cpp
    ./_linearHyperbolicData/LinearHyperMax3dVolTerms.cpp
    ./_linearHyperbolicData/LinearHyperSer1dVolTerms.cpp
    ./_linearHyperbolicData/LinearHyperSer2dVolTerms.cpp
    ./_linearHyperbolicData/LinearHyperSer3dVolTerms.cpp
    """,
    includes = '. ./_linearHyperbolicData', target = 'gkupdater', vnum="1.0")
